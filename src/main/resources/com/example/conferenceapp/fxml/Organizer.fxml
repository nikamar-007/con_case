      fx:controller="com.example.conferenceapp.controller.OrganizerController"
      spacing="20" style="-fx-padding: 30;">

    <HBox spacing="15" alignment="CENTER_LEFT">
        <ImageView fx:id="photo" fitWidth="96" fitHeight="96" preserveRatio="true"/>
        <Label fx:id="greeting" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Профиль" onAction="#onProfile"/>
    </HBox>

