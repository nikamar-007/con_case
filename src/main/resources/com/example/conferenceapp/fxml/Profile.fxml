<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.ColumnConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.conferenceapp.controller.ProfileController">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="pane-secondary">
            <ImageView fx:id="photo" fitWidth="96" fitHeight="96" preserveRatio="true"/>
            <VBox spacing="4">
                <Label fx:id="nameLabel" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                <Label fx:id="roleLabel" style="-fx-font-size: 16px;"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints prefWidth="250"/>
            </columnConstraints>

            <Label text="ID / Логин:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Телефон:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="phoneLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Направление:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="directionLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Страна:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="countryLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Дата рождения:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="birthLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Пол:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label fx:id="genderLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
</BorderPane>
