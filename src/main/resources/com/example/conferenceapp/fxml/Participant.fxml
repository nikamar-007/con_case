<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.conferenceapp.controller.ParticipantController">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="pane-secondary">
            <ImageView fx:id="photo" fitWidth="88" fitHeight="88" preserveRatio="true"/>
            <VBox spacing="5">
                <Label text="Личный кабинет участника" style="-fx-font-size: 14px;"/>
                <Label fx:id="nameLabel" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                <Label fx:id="directionLabel" style="-fx-font-size: 14px;"/>
            </VBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Профиль" onAction="#onProfile"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Рекомендованные активности" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TableView fx:id="activityTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="eventCol" text="Мероприятие" prefWidth="200"/>
                    <TableColumn fx:id="titleCol" text="Активность" prefWidth="220"/>
                    <TableColumn fx:id="dateCol" text="Дата" prefWidth="150"/>
                    <TableColumn fx:id="directionCol" text="Направление" prefWidth="160"/>
                    <TableColumn fx:id="timeCol" text="Время" prefWidth="140"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
