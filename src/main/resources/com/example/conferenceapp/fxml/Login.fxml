<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.conferenceapp.controller.LoginController"
            prefWidth="400" prefHeight="440">

    <VBox spacing="12" layoutX="40" layoutY="30">
        <Label text="Авторизация" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <TextField fx:id="idField" promptText="ID Number"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <CheckBox fx:id="rememberCheck" text="Запомнить меня"/>
        </HBox>

        <!-- CAPTCHA -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="captchaImage" fitWidth="120" fitHeight="50"
                       pickOnBounds="true" preserveRatio="true"/>
            <Button text="Обновить" onAction="#onRefreshCaptcha"/>
        </HBox>
        <TextField fx:id="captchaInput" promptText="Введите код с картинки"/>
        <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>

        <Button fx:id="loginBtn" text="Войти" onAction="#onLogin"
                styleClass="button-primary" maxWidth="Infinity"/>

        <Label fx:id="lockLabel" style="-fx-text-fill: darkred;"/>
    </VBox>
</AnchorPane>
